{
    "preset": "symfony",
    "rules": {
        "concat_space": {
            "spacing": "one"
        },
        "binary_operator_spaces": {
            "operators": {
                "=>": "single_space",
                "=": "single_space"
            }
        },
        "yoda_style": false,
        "array_syntax": true,
        "ordered_imports": {
            "sort_algorithm": "alpha"
        },
        "increment_style": {
            "style": "post"
        },
        "no_empty_comment": false,
        "no_extra_blank_lines": false,
        "no_unneeded_control_parentheses": false,
        "not_operator_with_successor_space": true,
        "phpdoc_align": {
            "tags": {
                "params": true
            }
        },
        "phpdoc_no_empty_return": false,
        "phpdoc_order": true
    },
    "exclude": [
        "vendor-licensed"
    ]
}
